---
import React from 'react';
const ChessBoard = (await import('./ChessBoard.jsx')).default;
---

<div class="flex flex-col md:flex-row md:justify-center md:items-start gap-8 py-10 px-3 min-h-[90vh] max-w-6xl mx-auto">
  <div class="flex flex-col items-center w-full md:w-[520px]">
    <h1 class="text-4xl font-bold text-primary drop-shadow mb-2 text-center">
      Ocean Chess
    </h1>
    <span class="text-base text-secondary font-medium mb-4 text-center">
      Play an elegant chess game, locally in your browser.
    </span>
    <ChessBoard client:load />
  </div>
</div>
